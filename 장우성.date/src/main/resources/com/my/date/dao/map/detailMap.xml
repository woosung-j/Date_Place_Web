<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
	'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='com.my.date.dao.map.DetailMap'>
	<select id='selectDetails' resultType='detail'>
		select * form details
		order by detail_id
	</select>
	<select id='detailDetails' resultType='detail'>
		select * from details
		where detail_id = #{detailId}
	</select>
	<select id='selectDetail' resultType='detail'>
		select * from details
		where detail_id = #{detailId}
	</select>
	<insert id='insertDetail'>
		insert into details(detail_id, place_id, tel, openingHours, closingHours, dayoff, contact, parking, createdAt, updatedAt)
		values(DETAILS_DETAILID_SEQ.nextval, #{tel},, #{openingHours}, #{closingHours}, #{dayoff}, #{contact}, #{parking},)
	</insert>
	
	<update id ='updateDetail'>
		update details
		set tel = #{tel},
			openingHours = #{openinghours},
			closingHouts = #{closingHours},
			dayoff = #{dayoff},
			contact = #{contact},
			parking = #{parking},
		where detail_id = #{detailId}
	</update>
	<delete id='deleteDetail'>
		delete details
		where detail_id = #{detailId}
	</delete>
	
	<resultMap id='detailMap' type='detail'>
		<id property='detailId' column='detail_Id'/>
		<result property='address' column='address'/>
		<result property='tel' column='tel'/>
		<result property='openingHours' column='opening_hours'/>
		<result property='closingHours' column='closing_hours'/>
		<result property='dayoff' column='dayoff'/>
		<result property='contact' column='contact'/>
		<result property='parking' column='parking'/>
		<result property='createdAt' column='created_at'/>
		<result property='updatedAt' column='updated_at'/>
	</resultMap>
</mapper>
	